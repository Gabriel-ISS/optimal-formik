{
  "name": "optimal-formik",
  "description": "A formik alternative that optimizes for performance",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gabriel-ISS/optimal-formik.git"
  },
  "keywords": [
    "formik",
    "react",
    "performance"
  ],
  "author": "Gabriel Sanabria",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gabriel-ISS/optimal-formik/issues"
  },
  "homepage": "https://github.com/Gabriel-ISS/optimal-formik#readme",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/optimal-formik.umd.js",
  "module": "./dist/optimal-formik.es.js",
  "types": "./dist/types/optimal-formik.es.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/optimal-formik.es.d.ts",
      "import": "./dist/optimal-formik.es.js",
      "require": "./dist/optimal-formik.umd.js"
    }
  },
  "scripts": {
    "dev": "vite --config vite.sandbox.config.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "watch": "vitest"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "c8": "^10.1.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4",
    "yup": "^1.6.1",
    "zod": "^3.24.1"
  }
